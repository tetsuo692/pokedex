{
    "extends": "./tsconfig.app.json",
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "verbatimModuleSyntax": false,
        "allowImportingTsExtensions": false,
        "noEmit": false,
        "types": [
            "node",
            "jest",
            "@testing-library/jest-dom"
        ],
        "esModuleInterop": true
    },
    "include": [
        "src",
        "tests"
    ]
}